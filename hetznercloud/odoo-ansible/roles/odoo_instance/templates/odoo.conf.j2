[options]
admin_passwd =" {{ admin_password | default('admin') }}"
db_host = "{{ db_host_internal }}"
db_user = "{{ item.name }}"
db_password = "{{ item.db_password }}"
db_name = "{{ item.name }}"
dbfilter = ^{{ item.name }}$

# Custom Paths
data_dir =" {{ data_folder }}/filestore/{{ item.name }}"
logfile = "{{ data_folder }}/logs/{{ item.name }}.log"

# Networking
http_port = "{{ item.port }}"
longpolling_port = "{{ item.port + 1000 }}"
proxy_mode = True

# Addons
addons_path = {{ app_folder }}/source/addons,{{ app_folder }}/custom/{{ item.name }}

# FreeIPA / LDAP Integration logic
# Note: LDAP configuration is usually finalized inside the Odoo UI via auth_ldap module,
# but these settings ensure the server is ready.
ldap_server = "{{ ldap_server }}"
ldap_base = "{{ ldap_base_dn }}"

workers = "{{ odoo_workers }}"
max_cron_threads = 1
proxy_mode = True

# Performance Tuning
limit_memory_hard = 1677721600
limit_memory_soft = 629145600
limit_request = 8192
limit_time_cpu = 600
limit_time_real = 1200